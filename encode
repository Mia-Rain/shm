#!/bin/sh
nl='
'
space=' '
while IFS= read -r p || [ "$p" ]; do
  IFS=" "; for i in $p; do # test
    [ "${i#\$(}" != "$i" ] && {
      i="${i#'$('}"
    }
    [ "${i%)}" != "$i" ] && {
      i="${i%)}"
    }
    case "${i}" in
      '#')     break;;
      'while') p="${p%%"${i}"*}w${p##*"${i}"}";;
      'until') p="${p%%"${i}"*}u${p##*"${i}"}";;
      'done')  p="${p%%"${i}"*}n${p##*"${i}"}";;
      'for')   p="${p%%"${i}"*}f${p##*"${i}"}"; for=1;;
      'do')    p="${p%%"${i}"*}d${p##*"${i}"}";;
      'in')    p="${p%%"${i}"*}i${p##*"${i}"}";; # using a letter for in can cause issues
      'case')  p="${p%%"${i}"*}c${p##*"${i}"}";;
      'esac')  p="${p%%"${i}"*}s${p##*"${i}"}";;
      'read')  p="${p%%"${i}"*}r${p##*"${i}"}";;
      'echo')  p="${p%%"${i}"*}e${p##*"${i}"}";;
      'printf')p="${p%%"${i}"*}p${p##*"${i}"}";;
      'EOF')   p="${p%%"${i}"*}o${p##*"${i}"}";;
      *) [ "$for" ] && {
        p="${p%%"${i}"*}${i:+\$"$i"}${space}${p##*"${i}${space}"}"
        unset for # this solves previous issues with in
       } ;;
    esac # default to letter shorthand to readability
  done
  unset for sub esub
  printf '%s' "$p$nl"
done
